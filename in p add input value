  <div>text</div>
<script>
let div = document.querySelector('div');
let p = document.createElement('p');
div.appendChild(p);
p.textContent = 'wow!';
for(let i = 1; i < 6; i++) {
 input = document.createElement('input');



input.addEventListener('blur', function() {
    p.textContent = p.textContent + '' + this.value;
}); 
div.appendChild(input); }
</script>
</body>
